@model QuestionCreateViewModel

<h1>Ask a though-out question to the programming community</h1>

<div class="content-section">
    @using (Html.BeginForm("QuestionCreate", "Post", FormMethod.Post, new { @autocomplete = "off" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            @Html.LabelFor(m => m.Title, "Title")
            @Html.LabelFor(m => m.Title, "Make sure your title is concise and specific.")
            @Html.TextBoxFor(m => m.Title, "", new { @class = "form-control form-control-lg", 
                @type = "text", @placeholder = "Title" 
            })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Content, "Content")
            @Html.LabelFor(m => m.Content, "Elaborate on your title here and what you wanted your code to do.")
            @Html.Editor(m => m.Content, "", "#content-editor", new { @class = "form-control")
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Tags, "Tags")
            @Html.LabelFor(m => m.Tags, "Categorize your question by adding up to 5 tags.")
            @Html.ListBox(m => m.Tags, Model.AllTags, new { @class = "form-control")
        </div>

        <div class="form-group">
            <input type="submit" name="submit" class="btn btn-outline-info" value="Submit Question" />
        </div>
    }
</div>
