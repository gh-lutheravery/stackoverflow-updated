@using WebApplication5.ViewModels.User
@model LoginViewModel


<div id="login-container" class="content-section box ml-auto mr-auto mt-6 is-justify-content-center">
    <h1 class="title is-3">Login</h1>
    <form asp-controller="Profile" asp-action="Login">
        @Html.AntiForgeryToken()

        <div class="field">
            <label class="label" for="Email">Email</label>
            <div class="control">
                <input class="input" type="text" name="Email" asp-for="Email"/>
            </div>
        </div>

        <div class="field">
            <label class="label" for="Password">Password</label>
            <div class="control">
                <input class="input" type="password" name="Password" asp-for="Password" />
            </div>
        </div>

        @if (!Html.ViewData.ModelState.IsValid || ViewData["IncorrectInput"] != null)
        {
            <div class="notification is-warning " role="alert">
                @ViewData["IncorrectInput"]
                @Html.ValidationSummary()
            </div>
        }

        <div class="field is-grouped">
            <div class="control">
                <input type="submit" name="submit" class="button is-link" value="Login" />
            </div>
        </div>
    </form>

    <small class="text-muted">
        Don't have an account? @Html.ActionLink("Sign up here", "Register", "Profile", htmlAttributes: new { @class="ml-2" })
    </small>
</div>
