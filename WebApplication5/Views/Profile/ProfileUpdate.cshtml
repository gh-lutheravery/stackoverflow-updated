@model WebApplication5.ViewModels.User.ProfileUpdateViewModel


<div class="mr-auto mt-3">
    <h1><b>Account Info</b></h1>
    <a class="" asp-area="" asp-controller="Profile" asp-action="Detail"><h2>Back to Profile</h2></a>
    @using (Html.BeginForm("Update", "User", FormMethod.Post, new { @autocomplete = "off" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            @Html.LabelFor(m => m.Name, "Username")
            @Html.TextBoxFor(m => m.Name, "", new { @class = "form-control form-control-lg", 
                @type = "text", @value = Model.Name
            })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Email, "Email")
            @Html.TextBoxFor(m => m.Email, "", new { @class = "form-control form-control-lg", 
                @type = "text", @value = Model.Email
            })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Bio, "Bio")
            @Html.TextBoxFor(m => m.Bio, "", new { @class = "form-control form-control-lg", 
                @type = "text", @value = Model.Bio
            })
        </div>

        <div class="form-group m-auto">
            <input type="submit" name="submit" class="btn btn-outline-info" value="Update" />
        </div>
    }
</div>
